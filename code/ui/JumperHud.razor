
@attribute [StyleSheet("/UI/JumpHud.scss")]

<root>
	<text>@Height</text>
	<text>@MaxHeight</text>
</root>

@code
{
	public float Height { get; set; }
	public float MaxHeight { get; set; }
	bool Active = true;

	public override void Tick()
	{
		base.Tick();

		if (Local.Pawn is not JumperPawn pawn)
			return;

		if (Height > MaxHeight)
		{
			MaxHeight = Height;
		}
		else
			Height = pawn.Height;
	}
}