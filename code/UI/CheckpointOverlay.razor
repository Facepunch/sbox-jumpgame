
@inherits Panel;

<root class=@(Visible ? "visible" : "")>
    @Message
</root>

@code {
    public string Message { get; set; } = "";

    private bool Visible => TimeSinceDisplayed < 7;
    private TimeSince TimeSinceDisplayed;
    private static CheckpointOverlay Instance;

    public CheckpointOverlay()
    {
        Instance = this;
        Instance.TimeSinceDisplayed = 8;
    }

    public static void Display(string message)
    {
        Instance.Message = message;
        Instance.TimeSinceDisplayed = 0f;
    }

    protected override int BuildHash()
    {
        return Visible ? 1 : 0;
    }
}
